

@model Domain.Entities.Device
@{
    ViewBag.Title = "Добавление данных устройства";
}

@if (Request.HttpMethod == "POST")
{
    @RenderPage("~/Views/Shared/Error.cshtml")
}

@using (Html.BeginForm("AddDevice", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h1><span class="glyphicon glyphicon-adjust"></span>Добавление устройства</h1>
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label class="control-label">Код устройства</label>
        @Html.TextBoxFor(x => x.DeviceCode, new { @class = "form-control validate-empty" })
    </div>
    <div class="form-group">
        <label class="control-label">Название устройства</label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control validate-empty" })
    </div>
    <div class="form-group">
        <label class="control-label">Статус Устройства</label>
        @Html.CheckBoxFor(x => x.Status)
    </div>


    <div class="btn btn-group">
        <a class="btn btn-default" href="/Home/Index/">Назад</a>
        <input type="submit" class="btn btn-success" value="Создать" />
    </div>

}



