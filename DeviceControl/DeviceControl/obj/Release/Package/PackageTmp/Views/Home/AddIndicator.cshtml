@model Domain.Entities.Indicator
@{
    ViewBag.Title = "Добавление индикатора";
}

@if (Request.HttpMethod == "POST")
{
    @RenderPage("~/Views/Shared/Error.cshtml")
}

@using (Html.BeginForm("AddIndicator", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h1><span class="glyphicon glyphicon-cog"></span>Добавление индикатора</h1>
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label class="control-label">Показатель счетчика</label>
        @Html.TextBoxFor(x => x.MeterValue, new { @class = "form-control validate-empty" })
    </div>
    <div class="form-group">
        <label class="control-label">Единица измерения</label>
        @Html.TextBoxFor(x => x.Unit, new { @class = "form-control validate-empty" })
    </div>
    <div class="form-group">
        <label class="control-label">Тип</label>
        @Html.TextBoxFor(x => x.UnitName, new { @class = "form-control validate-empty" })
    </div>

    <div class="btn btn-group">
        <a class="btn btn-default" href="/Home/Index/">Назад</a>
        <input type="submit" class="btn btn-success" value="Создать" />
    </div>

}